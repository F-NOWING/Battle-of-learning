/* pages/readingRoom/articleList/articleList.wxss */

.word-clamp {
  display: -webkit-box;
  overflow : hidden;
  text-overflow: ellipsis;
  /* -webkit-line-clamp: 2; */
  -webkit-box-orient: vertical;
}
.article-list {
  display: flex;
  align-items: center;
  margin-left: 8px;
  margin-right: 8px;
  padding-top: 8px;
  padding-bottom: 8px;
  border-bottom: 1px solid #e3e3e3;
}
.author-img {
  /* display: inline-block; */
  width: 80px;
  min-width: 80px;
  height: 80px;
  background-color: blue;
  border-radius: 50%;
}
.list-all {
  margin-left: 8px;
}
.list-title {
  margin-bottom: 4px;
  padding-right: 12px;
  font-weight: bold;
  -webkit-line-clamp: 1;
}
.list-author {
  font-size: 12px;
  font-weight: bold;
}
.list-content {
  padding-right: 12px;
  padding-bottom: 4px;
  font-size: 12px;
  word-break: break-all;
  color: #bababa;
  -webkit-line-clamp: 2;
}
.list-other {
  justify-content: space-between;
}
.list-other,
.list-feedback,
.feedback-like,
.feedback-collect,
.list-time {
  display: flex;
  align-items: center;
}

/* 图片设置 */
.like,
.collect,
.more {
  width: 18px;
  height: 18px;
}