/* pages/studentCard/numberBind/bindPhone.wxss */
page {
  background-color: #fbf3d0;
}
.phone-bind {
  height: 40px;
  text-align: center;
  line-height: 40px;
  font-weight: bold;
  /* text-decoration: underline; */
  color: #e3a51c;
  background-color: #ffe57e;
}
.phone-bind > text {
  padding: 2px 4px;
  border-bottom: 2px solid #e3a51c;
}
.phone,
.check {
  /* width: 90%; */
  display: flex;
  align-items: center;
  margin-left: 16px;
  margin-right: 16px;
  margin-bottom: 16px;
  word-break: keep-all;
}
.check {
  position: relative;
} 
.bind-describe {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 28px;
  margin-bottom: 30px;
}
.bind-notice {
  width: 28px;
  height: 28px;
}
.bind-text {
  margin-left: 6px;
  font-size: 12px;
  color: #865834;
}
.phone-number,
.phone-check {
  font-size: 20px;
  color: #fcba1a;
}
.phone-input,
.phone-checkNum {
  margin-left: 6px;
  padding: 2px 0 2px 4px;
  width: 78%;
  font-size: 14px;
  background-color: #fcd32d;
  border-top: 2px solid #d3aa34;
  border-radius: 5px;
}
.get-checkNum {
  /* 添加较高层级，避免绑定的单击事件无效 */
  z-index: 10;       
  position: absolute;
  right: 2px;
  /* width: 20%; */
  font-size: 14px;
  height: 28px;
  line-height: 22px;
  color: #fff;
  background-color: #fcd32d;
  border: 2px solid #5f2500;
}

.to-bind {
  margin-top: 70px;
  width: 36%;
  height: 36px;
  line-height: 32px;
  color: #fff;
  background-color: #aec542;
  border-radius: 5px;
  border: 2px solid #5f2500;
}
